{
  "name": "vscode-lcov",
  "displayName": "VSCode LCOV",
  "description": "Renders line and branch test coverage",
  "author": {
      "name": "Alex Dima",
      "email": "alexdima@microsoft.com"
  },
  "license": "MIT",
  "version": "0.3.0",
  "publisher": "alexdima",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexandrudima/vscode-lcov"
  },
  "homepage": "https://github.com/alexandrudima/vscode-lcov",
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "icon.png",
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Test Coverage",
      "order": 2,
      "properties": {
        "lcov.path": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ],
          "default": "coverage/lcov.info",
          "description": "Path to lcov file"
        },
        "lcov.branchCoverage": {
          "type": "string",
          "enum": [
            "full",
            "simple",
            "off"
          ],
          "default": "simple",
          "description": "Render Branch Coverage"
        },
        "lcov.sourceMaps": {
          "type": "boolean",
          "default": false,
          "description": "Use JavaScript source maps."
        },
        "lcov.watch": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string"
              },
              "command": {
                "type": "string"
              },
              "osx": {
                "properties": {
                  "pattern": {
                    "type": "string"
                  },
                  "command": {
                    "type": "string"
                  }
                }
              },
              "windows": {
                "properties": {
                  "pattern": {
                    "type": "string"
                  },
                  "command": {
                    "type": "string"
                  }
                }
              },
              "linux": {
                "properties": {
                  "pattern": {
                    "type": "string"
                  },
                  "command": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "default": []
        }
      }
    },
    "commands": [
      {
        "command": "lcov.menu",
        "title": "LCOV Menu"
      },
      {
        "command": "lcov.displayCoverageEditorDecorator",
        "title": "LCOV Toggle coverage editor decorator"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.77.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "elegant-spinner": "^3.0.0",
    "lcov-parse": "1.0.0",
    "source-map": "0.7.4"
  }
}
